---
apiVersion: v1
kind: Service
metadata:
  name: "{{ meta.name }}-web-svc"
  namespace: "{{ project_name }}"
  labels:
    app: pulp-web
spec:
  selector:
    app: pulp-web
  ports:
    - protocol: TCP
      targetPort: 8080
      name: pulp-web-8080
      port: 24880
{% if ingress_type|lower == "none" %}
      nodePort: 24880
  type: NodePort
{% endif %}
